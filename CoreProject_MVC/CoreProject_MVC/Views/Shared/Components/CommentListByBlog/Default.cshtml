@model IEnumerable<EntityLayer.Concrete.Comment> 

@if (Model.Count() > 0)
{
    
<div class="comment-top">
    <h4>Yorumlar</h4>
     @foreach(var item in Model)
        {
    <div class="media">
       
            
        
        <img src="~/web2/images/t1.jpg" alt="" class="img-fluid" />
        <div class="media-body">
            <h5 class="mt-0">@item.CommentUsername</h5>
            <p>
               @item.CommentContent
            </p>
              </div>
         
      
       
    </div>
     }
    </div>
}
else
{
    <h2 class="text-danger">Henüz Yorum Yapılmadı İlk Yorum Yapan Sen Ol.</h2>
}
