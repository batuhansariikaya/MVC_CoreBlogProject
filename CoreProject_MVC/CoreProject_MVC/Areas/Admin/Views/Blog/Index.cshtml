@using EntityLayer.Concrete
@model List<Blog>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
  <link href="~/admin/css/plugins/dataTables/datatables.min.css" rel="stylesheet">
<script src="~/admin/js/plugins/dataTables/datatables.min.js"></script>
<script src="~/admin/js/plugins/dataTables/dataTables.bootstrap4.min.js"></script>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Basic Data Tables example with responsive plugin</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-wrench"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="#" class="dropdown-item">Config option 1</a>
                        </li>
                        <li>
                            <a href="#" class="dropdown-item">Config option 2</a>
                        </li>
                    </ul>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Blog Adı</th>
                                <th>Kategori</th>
                                <th>Durum</th>
                                <th>Tarih</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                       {                                               
                        <tbody>
                            <tr class="gradeX">
                                <td>@item.BlogID</td>
                                <td>
                                   @item.BlogTitle
                                </td>
                                <td>kategori</td>
                                <td>@item.BlogStatus</td>
                                <td class="center">@(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))</td>
                                <td><a href="/Admin/Blog/DeleteBlog/@item.BlogID" class="btn btn-info text-white">Sil</a>
                                    <a href="/Admin/Blog/GetBlogInfo/@item.BlogID" class="btn btn-success text-white">Güncelle</a></td>
                               
                            </tr>
                          </tbody>
                               }
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
