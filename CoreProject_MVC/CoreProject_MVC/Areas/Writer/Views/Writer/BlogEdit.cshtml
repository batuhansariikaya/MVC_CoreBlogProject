 @model EntityLayer.Concrete.Blog
@{
    ViewData["Title"] = "BlogEdit";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

@using (Html.BeginForm("BlogEdit", "Writer", FormMethod.Post))
{
    @Html.Label("ID");
    @Html.TextBoxFor(x=>x.BlogID,new {@class="form-control"});
    <br />
    @Html.Label("Oluşturulma Tarihi");
    @Html.TextBoxFor(x=>x.BlogCreateDate,new {@class="form-control"});
    <br />
     @Html.Label("Durum");
    @Html.DropDownListFor(x=>x.BlogStatus,(List<SelectListItem>)ViewBag.status, new { @class = "form-control" })

    <br />
     @Html.Label("Writer ID");
    @Html.TextBoxFor(x=>x.WriterID,new {@class="form-control"});



    @Html.Label("Başlık")
    @Html.TextBoxFor(x=>x.BlogTitle,new {@class="form-control"})
    <br />
    @Html.Label("Blog Görseli")
    @Html.TextBoxFor(x=>x.BlogImage,new {@class="form-control"})
    <br />
    @Html.Label("Blog Küçük Görseli")
    @Html.TextBoxFor(x=>x.BlogThumbnailImage,new {@class="form-control"})
    <br />
    @Html.Label("Kategori")
    @Html.DropDownListFor(x=>x.CategoryID,(List<SelectListItem>)ViewBag.cv,new{@class="form-control"})
    <br />
    @Html.Label("İçerik")
    @Html.TextAreaFor(x=>x.BlogContent,10,3,new {@class="form-control"})
    <br />

     <button class="btn btn-info">Ekle</button>
}

